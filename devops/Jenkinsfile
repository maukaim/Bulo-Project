pipeline {
    agent any

    tools {
        // Specify the Maven version installed in Jenkins
        maven 'Maven local'
        jdk 'MyJDK'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checks out the code from your Git repository
                git branch: 'jenkins-coverage', url: 'https://github.com/maukaim/Bulo-Project'
            }
        }

        stage('Build') {
            steps {
                dir('back-end') {
                    // Builds the project with Maven
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                // Runs unit tests with Maven
                dir('back-end'){
                    script {
                    sh "mvn test -T 4"
                    }
                }
            }
        }
        stage('Coverage Report'){
            steps{
                jacoco(execPattern: '**/*core*/target/jacoco.exec')
//                 recordCoverage(tools: [[parser: 'JACOCO']],
//                         id: 'jacoco', name: 'JaCoCo Coverage',
//                         sourceCodeRetention: 'EVERY_BUILD',
//                         qualityGates: [
//                                 [threshold: 60.0, metric: 'LINE', baseline: 'PROJECT', unstable: true],
//                                 [threshold: 60.0, metric: 'BRANCH', baseline: 'PROJECT', unstable: true]])
            }
        }

        stage('Deploy') {
            steps {
                // Deploys the project with Maven
                echo 'Deployed something great.'
            }
        }
    }
}